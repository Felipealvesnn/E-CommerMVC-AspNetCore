@*@model IEnumerable<LancheMVC_Aplication.DTOs.LancheDTO>*@
@model LancheListViewModel
@*@model LancheMVC_Aplication.DTOs.AllDTo*@

<div>
    <h2>Todos os Lanches</h2>
</div>
<h1>@ViewData["data"]</h1>
<hr />
 <h1>NUmeto total de lanches é @ViewBag.totalLanches</h1>
<hr />


<div class="container">
    @Model.CategoriaAtual
    <div class="row">
@foreach(var lanche in Model.lanches)
{
            
    <div class="col-sm-4 col-md-4 col-lg-4">
        <p><img src="@lanche.ImagemUrl" class="img-fluid"></p>
         <h3>Preço : @lanche.Preco.ToString("c")</h3>
        <h4>@lanche.Nome</h4>
        <p>@lanche.DescricaoCurta</p>
        
       
    </div>
}

</div>

</div>