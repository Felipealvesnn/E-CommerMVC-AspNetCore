                <!-- Product name-->
                <h5 class="fw-bolder">@Model.DescricaoCurta</h5>
                <!-- Product price-->
                @Model.Preco.ToString("c")
            </div>
        </div>
        <!-- Product actions-->
        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
            <div class="text-center">
                @*<a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a>*@


